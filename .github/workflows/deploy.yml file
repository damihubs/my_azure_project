name: Deploy to Azure

on:
  push:                           # Trigger the deployment workflow on push to the 'main' branch
    branches:
      - main
  pull_request:                   # Trigger the deployment workflow on pull requests targeting the 'main' branch
    branches:
      - main

jobs:
  build-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Check out repository
        uses: actions/checkout@v2

      - name: Log in to Azure
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Display Deployment Start
        run: echo "Starting deployment to Azure..."  # Output message to indicate the start of the deployment

      - name: Deploy to Azure App Service
        run: echo "Deploying code to Azure App Service..."  # Output message for progress tracking
      - name: Deploy to Azure
        uses: azure/webapps-deploy@v2
        with:
          app-name: "my-web-app"
          publish-profile: ${{ secrets.AZURE_WEBAPP_PUBLISH_PROFILE }}
          package: .
